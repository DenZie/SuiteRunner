		function showprogress() {
		$.get( "/getstat", function( data ) {
			$("#stbody").empty();
			$("#progressbar").progressbar( "option", "value", data.cur );
			var suite = JSON.parse(data.suite)	
			suite.collectionResults.forEach(function(value, index, array) {
				var el ="<tr><td>Suite Name:</td><td>" + value.suiteName+ "</td></tr>";
				$("#stbody").append(el);
			});
		if(tot > data.cur) {	
			setTimeout(showprogress, 3000)
		}})};
		showprogress();
